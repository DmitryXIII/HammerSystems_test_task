<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/toolbar_banner_width"
    android:layout_height="@dimen/toolbar_banner_height"
    android:layout_marginEnd="@dimen/default_layout_padding"
    app:cardElevation="@dimen/zero">

    <ImageView
        android:id="@+id/toolbar_banner_item_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        tools:src="@drawable/banner" />
</com.google.android.material.card.MaterialCardView>