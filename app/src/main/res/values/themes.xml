<resources>
    <!-- Base application theme. -->
    <style name="Theme.HammerSystemsTestTask" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="tabStyle">@style/Widget.App.TabLayoutStyle</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Widget.App.TabLayoutStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorHeight">@dimen/zero</item>
        <item name="tabMode">scrollable</item>
        <item name="tabStyle">@style/Widget.App.TabLayoutStyle</item>
        <item name="tabBackground">@drawable/tab_background</item>
        <item name="tabRippleColor">@android:color/transparent</item>
        <item name="tabTextAppearance">@style/Widget.App.TabTextAppearance</item>
    </style>

    <style name="Widget.App.TabTextAppearance" parent="TextAppearance.AppCompat.Small">
        <item name="textAllCaps">false</item>
    </style>

    <style name="Widget.App.TabStyle" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>


